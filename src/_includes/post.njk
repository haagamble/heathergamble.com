---
layout: base
---

<article class="post">
  <header class="post-header">
    <h1 class="post-h1">{{ title }}</h1>
    <p class="post-meta">
      <span class="post-date">{{ date.toDateString() }}</span>
      {%- if summary -%}
        <span class="post-dot">•</span>
        <span class="post-summary">{{ summary }}</span>
      {%- endif -%}
    </p>
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  <nav class="post-nav">
    <a href="/diary/">← Back to diary</a>
    <a href="/">Home</a>
  </nav>
</article>
